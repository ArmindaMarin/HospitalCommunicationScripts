using System.IO;
using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.UI;
using UnityEngine.AI;
using System.Data;

public class CommunicationManager : MonoBehaviour {
    public Camera cam;
    public GameObject manager;
    public GameObject communicationWindow;
    public GameObject spriteUi;
    public GameObject otherSpriteUi;
    public GameObject optionSpriteUi;
    public GameObject convoUi;
    public GameObject otherConvoUi;
    public GameObject optionsUi;
    public GameObject optionUi_4;
    public GameObject optionUi_2;
    public GameObject nameUi;
    public GameObject otherNameUi;

    public GameObject player;
    public GameObject otherCanvis;
    public GameObject typeCanvas;
    public GameObject someCanvas;
    public GameObject pauzeBtn;

    public AllCharactorSprites allCharacters;
    public ScenarioHandler jsonFileManager;
    public SavedScenarioProgress saveProgress;
    public enum emotion { DEFAULT, HAPPY, SAD, WORRIED, AFFRAID, MAD, ANXIOUS, CONFUSSED, SHOCKED, THINKING }

    public Chapter chapter;
    public Conversation currentConvo;

    public float typingSpeed;
    public string personName = "Default";
    public string playerName = "Ms. Nurse";
    private string nurseLotte = "Nurse Lotte";
    private string patientB = "Bet√ºl Yildiz";
    private string patientAPeter = "Peter Pluijmen";
    private bool endConvo;
    private bool isSentanceFinished;
    private string _JasonFilePath;
    private string _nlJasonFilePath;
    private string clearText = "";

    private void Awake() {
        //This is the path used to get to the json file for the chapter data
        //_nlJasonFilePath = Application.streamingAssetsPath + "/Data/ConversationData/NlChapter1v2File.json";
        //_JasonFilePath = Application.streamingAssetsPath + "/Data/ConversationData/EngChapter1v2File.json";
       _JasonFilePath = Application.streamingAssetsPath + jsonFileManager.currentChapter;
        
        chapter = LoadConvo(_JasonFilePath);
    }
    //Start is called before the first frame update
    void Start() {

        //SaveToJasonFile(CreateNlChapterData(), _nlJasonFilePath);
        //SaveToJasonFile(CreateEngChapterData(), _JasonFilePath);
        //chapter = CreateEngChapterData();
        //chapter = CreateNlChapterData();
        endConvo = false;
        isSentanceFinished = true;
        manager.GetComponent<HandleChapter1>().SetChaperCopy();
        manager.GetComponent<HandleChapter1>().SetComCopy();
    }
    //Update is called once per frame
    void Update() {
        if (currentConvo != null && Input.GetMouseButtonDown(0) && communicationWindow.activeSelf) {
            if (isSentanceFinished) {
                endConvo = currentConvo.currentDialogue.endSentence;
                if (endConvo) {
                    if (!currentConvo.isOver())
                    {
                        currentConvo.isUsed = false;
                    } else {
                        currentConvo.isUsed = true;
                    }
                    ClearConversation();
                    OnShowConversation();
                    if (manager != null) {
                        manager.GetComponent<HandleChapter1>().Chapter1Over();
                        manager.GetComponent<HandleChapter1>().PeterExplainedIssue();
                    }
                }
                if (!currentConvo.currentDialogue.isOptions) {
                    if (currentConvo.IsMoreDialogue(currentConvo.nextDialogueId)) {
                        currentConvo.SetCurrentDialogue(currentConvo.nextDialogueId);
                    }
                }
                ClearConversation();
                StopAllCoroutines();
                DisplayNext();
            } else {
                if (convoUi.activeSelf) {
                    StopAllCoroutines();
                    ClearConversation();
                    FastText(convoUi);
                } else if (otherConvoUi.activeSelf) {
                    StopAllCoroutines();
                    ClearConversation();
                    FastText(otherConvoUi);
                }
            }
        }
    }
    //This is the method called when a conversation needs to be displayed and the rest of the game is effectively paused
    public void OnShowConversation() {

        SetSenarioConvo(personName);

        if (currentConvo != null)
        {
            //These object scrips need to be disabled so that the conversation system works
            player.GetComponent<NavMeshAgent>().enabled = !player.GetComponent<NavMeshAgent>().enabled;
            player.GetComponent<PlayerController>().enabled = !player.GetComponent<PlayerController>().enabled;

            StopAllCoroutines();

            communicationWindow.SetActive(!communicationWindow.activeSelf);
            otherCanvis.SetActive(!otherCanvis.activeSelf);
            if (pauzeBtn != null) {
                pauzeBtn.SetActive(!pauzeBtn.activeSelf);
            }

            if (communicationWindow.activeSelf) {
                typeCanvas.SetActive(false);
                someCanvas.SetActive(false);
                //Do NOT remove, if so then if the dialogue begins with options then it will have an extra blank option
                manager.GetComponent<HandleChapter1>().SetChaperCopy();
                manager.GetComponent<HandleChapter1>().SetComCopy();
                checkInChapter1();
                ClearConversation();
                DisplayNext();
            }
        }
    }
    //This method sets the name and text ui of the nurse
    public IEnumerator DisplayNextDialogue(string text, GameObject convo) {
        isSentanceFinished = false;
        GameObject textUi = convo.GetComponent<ConvoUI>().GetChildText(0, 0);
        textUi.GetComponent<Text>().text = clearText;

        foreach (char letter in text.ToCharArray())
        {
            textUi.GetComponent<Text>().text += letter;
            yield return new WaitForSeconds(typingSpeed);
        }
        isSentanceFinished = true;
        convo.GetComponent<ConvoUI>().EnableFinishSymbol();
    }
    //This method displays the current dialogue
    public void DisplayNext() {
        if (currentConvo != null) {
            CheckForOptions();
            SetCurrentSprite();
            if (convoUi.activeSelf) {
                StartCoroutine(DisplayNextDialogue(currentConvo.GetDialogueText(), convoUi));

            } else if (optionsUi.activeSelf) {
                DisplayOptions(GiveStringOptionList(currentConvo.GetDialogueOptionList()), currentConvo.GetDialogueOptionList());
                HidHiddenOptions(currentConvo.GetDialogueOptionList());

            } else if (optionUi_2.activeSelf) {
                DisplayOptions(GiveStringOptionList(currentConvo.GetDialogueOptionList()), currentConvo.GetDialogueOptionList());
                HidHiddenOptions(currentConvo.GetDialogueOptionList());
            } else if (optionUi_4.activeSelf) {
                DisplayOptions(GiveStringOptionList(currentConvo.GetDialogueOptionList()), currentConvo.GetDialogueOptionList());
                HidHiddenOptions(currentConvo.GetDialogueOptionList());

            } else if (otherConvoUi.activeSelf) {
                SetTextBoxSprite(currentConvo.GetDialogueName(), otherConvoUi);
                StartCoroutine(DisplayNextDialogue(currentConvo.GetDialogueText(), otherConvoUi));
            }
        }
    }
    public void SetTextBoxSprite(string name, GameObject box) {
        Sprite tempBox = allCharacters.GetTextBoxSprite(name);
        if (tempBox != null) {
            box.GetComponent<ConvoUI>().GetChild().GetComponent<Image>().sprite = tempBox;
        }
    }
    public void FastText(GameObject convo) {
        GameObject textUi = convo.GetComponent<ConvoUI>().GetChildText(0, 0);
        textUi.GetComponent<Text>().text = currentConvo.GetDialogueText();
        isSentanceFinished = true;
        convo.GetComponent<ConvoUI>().EnableFinishSymbol();
    }
    //Here you need to say what happens when the option button gets pressed
    public void HandleOptions(GameObject gameObject) {
        switch (gameObject.tag) {
            case "option_1":
                currentConvo.SetOptionDialogue(0);
                manager.GetComponent<HandleChapter1>().HandleChapterHiddenOption(0, currentConvo.currentDialogue);
                break;
            case "option_2":
                currentConvo.SetOptionDialogue(1);

                manager.GetComponent<HandleChapter1>().HandleChapterHiddenOption(1, currentConvo.currentDialogue);
                break;
            case "option_3":
                currentConvo.SetOptionDialogue(2);
                manager.GetComponent<HandleChapter1>().HandleChapterHiddenOption(2, currentConvo.currentDialogue);
                break;
            case "option_4":
                currentConvo.SetOptionDialogue(3);
                manager.GetComponent<HandleChapter1>().HandleChapterHiddenOption(3, currentConvo.currentDialogue);
                break;
            case "option_5":
                currentConvo.SetOptionDialogue(4);
                manager.GetComponent<HandleChapter1>().HandleChapterHiddenOption(4, currentConvo.currentDialogue);
                break;
            case "option_6":
                currentConvo.SetOptionDialogue(5);
                manager.GetComponent<HandleChapter1>().HandleChapterHiddenOption(5, currentConvo.currentDialogue);
                break;
        }
        currentConvo.SetCurrentDialogue(currentConvo.currentDialogue.nextDialogueId);
        ClearConversation();
        StopAllCoroutines();
        DisplayNext();
    }

    //This method sets the texts of the availible options ui
    public void DisplayOptions(List<string> optionsList, List<ConvoOption> optionsForIfOver) {
        GameObject optionBox = GetCorrectOptionUi(optionsList.Count);

        optionBox.GetComponent<OptionBoxUI>().ShowPreviousMessage(currentConvo.GetDialogueText());
        optionBox.GetComponent<OptionBoxUI>().GetChildText(0).GetComponent<Text>().text = currentConvo.GetDialogueText();

        for (int i = 0; i < optionsList.Count; i++) {

            //This if statement still needs to be checked, but can only be checked when there are more options
            if (!optionBox.GetComponent<OptionBoxUI>().GetChildBtn(i).activeSelf)
            {
                optionBox.GetComponent<OptionBoxUI>().EnableBtn(i);
            }
            optionBox.GetComponent<OptionBoxUI>().ShowEndSymbol(optionsForIfOver[i].isOverConvo, i);
            optionBox.GetComponent<OptionBoxUI>().SetBtnText(SetOption(i), optionsList[i]);

        }

        if (optionsList.Count < 2) {
            for (int i = 1; i >= optionsList.Count; i--) {
                optionBox.GetComponent<OptionBoxUI>().DisableBtn(i);
            }
        } else if (optionsList.Count < 4 && optionsList.Count > 2) {
            for (int i = 3; i >= optionsList.Count; i--) {
                optionBox.GetComponent<OptionBoxUI>().DisableBtn(i);
            }
        } else if (optionsList.Count < 6 && optionsList.Count > 4) {
            // Here I need to disable the options that are not being used
            for (int i = 5; i > optionsList.Count; i--) {
                optionBox.GetComponent<OptionBoxUI>().DisableBtn(i);
            }
        }
    }
    public GameObject GetCorrectOptionUi(int amountOptions) {
        if (amountOptions <= 2) {
            optionUi_2.SetActive(true);
            optionUi_4.SetActive(false);
            optionsUi.SetActive(false);

            return optionUi_2;
        } else if (amountOptions <= 4) {
            optionUi_2.SetActive(false);
            optionUi_4.SetActive(true);
            optionsUi.SetActive(false);

            return optionUi_4;
        } else {
            optionUi_2.SetActive(false);
            optionUi_4.SetActive(false);
            optionsUi.SetActive(true);

            return optionsUi;
        }
    }
    public GameObject CheckActiveOptionBox() {
        if (optionUi_4.activeSelf) {
            return optionUi_4;
        } else if (optionUi_2.activeSelf) {
            return optionUi_2;
        } else {
            return optionsUi;
        }
    }
    //This method is used to hid all of the dialogue that needs to be hidden because of game play choises
    public void HidHiddenOptions(List<ConvoOption> optionsList) {
        GameObject optionBox = GetCorrectOptionUi(optionsList.Count);
        for (int i = 0; i < optionsList.Count; i++) {
            if (optionsList[i].hidden) {
                optionBox.GetComponent<OptionBoxUI>().DisableBtn(i);
            }
        }
    }
    //This method is used to set the current senario's conversation, by checking the name of the person to whom the nurse is talking to
    public void SetSenarioConvo(string otherName) {
        //chapter = SaveChapterDataToJsonFile();
        if (chapter == null) { Debug.Log("The chapter is empty"); }
        if (otherName != null) {
            currentConvo = chapter.GetNextConvo(otherName);
            //currentConvo.isUsed = true;
        }
    }
    //This method returns an optionBtnUi by giving an option id
    private GameObject SetOption(int index) {
        GameObject optionBox = CheckActiveOptionBox();
        GameObject option = optionBox.GetComponent<OptionBoxUI>().GetChildBtn(index);
        return option;
    }
    //This method is used to clear the text boxes
    public void ClearConversation() {
        DisplayNextDialogue("", otherConvoUi);
        DisplayNextDialogue("", convoUi);
        otherConvoUi.GetComponent<ConvoUI>().DisableFinishSymbol();
        convoUi.GetComponent<ConvoUI>().DisableFinishSymbol();
    }
    //This method sets either optionUi or convoUi to active depending on if there are options
    public void CheckForOptions() {
        if (currentConvo.currentDialogue.isOptions)
        {
            convoUi.SetActive(false);
            GetCorrectOptionUi(currentConvo.GetDialogueOptionList().Count);
            optionSpriteUi.SetActive(true);
            otherSpriteUi.SetActive(false);
            otherConvoUi.SetActive(false);
            spriteUi.SetActive(false);
            otherNameUi.SetActive(false);
        }
        else if (playerName.Equals(currentConvo.currentDialogue.name)) {
            optionsUi.SetActive(false);
            optionUi_2.SetActive(false);
            optionUi_4.SetActive(false);
            convoUi.SetActive(true);
            spriteUi.SetActive(true);
            otherConvoUi.SetActive(false);
            optionSpriteUi.SetActive(false);
            otherSpriteUi.SetActive(false);
            otherNameUi.SetActive(false);
        } else {
            otherConvoUi.SetActive(true);
            otherSpriteUi.SetActive(true);
            convoUi.SetActive(false);
            spriteUi.SetActive(false);
            optionsUi.SetActive(false);
            optionUi_2.SetActive(false);
            optionUi_4.SetActive(false);
            optionSpriteUi.SetActive(false);
            otherNameUi.SetActive(true);
        }
    }
    //This method returns a string list of all the availible options. Used to give text to the option buttons
    public List<string> GiveStringOptionList(List<ConvoOption> optionList) {
        List<string> tempList = new List<string>();
        if (optionList.Count == 0) {
            return tempList;
        }
        for (int i = 0; i < optionList.Count; i++) {
            tempList.Add(optionList[i].optionName);
            //if (!optionList[i].hidden) {
            //    tempList.Add(optionList[i].optionName);
            //}
        }
        return tempList;
    }
    public void SetCurrentSprite() {
        Sprite currentSprite = allCharacters.GetCharactorSprite(currentConvo.GetDialogueName(), currentConvo.GetEmote());
        Sprite currentSpriteShadow = allCharacters.GetShadowCharactorSprite(currentConvo.GetDialogueName(), currentConvo.GetEmote());
        if (spriteUi != null && spriteUi.activeSelf) {
            spriteUi.GetComponent<SpriteUI>().SetSpriteWithShadow(currentSpriteShadow, currentSprite);
        } else if (otherSpriteUi != null && otherSpriteUi.activeSelf) {
            otherNameUi.GetComponent<NameUi>().SetName().GetComponent<Text>().text = currentConvo.GetDialogueName();
            otherSpriteUi.GetComponent<SpriteUI>().SetSpriteWithShadow(currentSpriteShadow, currentSprite);
        } else if (optionSpriteUi != null && optionSpriteUi.activeSelf) {
            optionSpriteUi.GetComponent<SpriteUI>().SetSpriteWithShadow(currentSpriteShadow, currentSprite);
        }
    }
    public void checkInChapter1(){
        if (personName.Equals(nurseLotte) && chapter.currentChapterId == 1) {
            manager.GetComponent<HandleChapter1>().IsLotteInNurseRoom();
            manager.GetComponent<HandleChapter1>().SetConvoForLotte();
        }
        if (personName.Equals(patientB) && chapter.currentChapterId == 1) {
            manager.GetComponent<HandleChapter1>().CheckIfPlayerCheckedForContactPerson();
        }
        if (personName.Equals(patientAPeter) && chapter.currentChapterId == 1) {
            manager.GetComponent<HandleChapter1>().SetLastPeterTalk();
        }
    }
    //This method is used to save a new chaper data to a json file. It should only be used in development
    public void SaveToJasonFile(Chapter chapter, string _newJsonFilePath){
        string json = JsonUtility.ToJson(chapter, true);
        File.WriteAllText(_newJsonFilePath, json);
        Debug.Log("New json file saved! " + _newJsonFilePath);
    }
    //This method is used to give conversation data from json to the current chapter
    public Chapter LoadConvo(string _newJsonFilePath) {
        string json = File.ReadAllText(_newJsonFilePath);
        Chapter senario = JsonUtility.FromJson<Chapter>(json);
        return senario;
    }
    //This method sets with json file needs to be used when starting a scenario for english cases
    public void SetEngJsonPath() {
        SavedProgress();
        _JasonFilePath = Application.streamingAssetsPath + jsonFileManager.GiveEngJsonFilePath(chapter.currentChapterId);
        chapter = LoadConvo(_JasonFilePath);
        SetSavedProgress();
    }
    //This method sets with json file needs to be used when starting a scenario for dutch cases
    public void SetNedJsonPath() {
        SavedProgress();
        _JasonFilePath = Application.streamingAssetsPath + jsonFileManager.GiveDutchJsonFilePath(chapter.currentChapterId);
        chapter = LoadConvo(_JasonFilePath);
        SetSavedProgress();
    }
    //This method is used to save the progress that the conversation is at
    public void SavedProgress() {
        saveProgress.SaveProgress(chapter.convoList);
    }
    //This method is used to set the progress of the conversation after changing the language
    public void SetSavedProgress() {
        List<bool> usedList = saveProgress.SetSavedProgress();
        for (int i = 0; i < chapter.convoList.Count; i++)
        {
            chapter.convoList[i].isUsed = usedList[i];
        }
    }
    //This method is used to give new data for a new chapter. It should only be used when adding new data for a chapter
    public Chapter CreateEngChapterData()
    {
        //Names for other person that isn't the player
        //string nurseLote = "Nurse Lotte";
        //string patientAPeter = "Peter Pluijmen";
        //string patientB = "Bet√ºl Yildiz";
        string patientBBrother = "Brother";
        string patientBMother = "Mother";
        string patientBSister = "Sister";
        string patientBHusband = "Husband";

        //The availible conversations
        Conversation convoDefault = new Conversation("Default");
        Conversation convo1 = new Conversation(nurseLotte);
        Conversation convo1_1 = new Conversation(nurseLotte);
        Conversation convo1_2 = new Conversation(nurseLotte);
        Conversation convo1_3 = new Conversation(nurseLotte);
        Conversation convo2 = new Conversation(patientAPeter);
        Conversation convo2_1 = new Conversation(patientAPeter);
        Conversation convo3 = new Conversation(patientB);
        Conversation convo3_1 = new Conversation(patientB);
        Conversation convo4 = new Conversation(patientBBrother);
        Conversation convo5 = new Conversation(patientBMother);
        Conversation convo6 = new Conversation(patientBSister);
        Conversation convo7 = new Conversation(patientBHusband);

        //Adding dialogue (name,sentence, option, end, used, hidden)
        convo1.AddNewDialogue(nurseLotte, "Hey, good to see you here.", false, false, false, false);//0
        convo1.AddNewDialogue(nurseLotte, "I know you are still new, but there was an emergency call from a patient in room C4.035.", false, false, false, false);//1
        convo1.AddNewDialogue(nurseLotte, "Could you go check on him?", false, false, false, false);//2
        convo1.AddNewDialogue(nurseLotte, "If you need help, you can find me in the staff room later on!", false, true, false, false);//3
        //Need to set the start sentence
        convo1.StartSetUp();
        //Set Emotions
        convo1.SetDialogueEmotion(0, emotion.HAPPY);
        convo1.SetDialogueEmotion(0, emotion.WORRIED);
        convo1.SetDialogueEmotion(3, emotion.HAPPY);
        //Adding dialogue nextId
        //convo1.SetDialogueNextId(3,0);

        //Adding dialogue (name,sentence, option, end, used, hidden)
        convo1_1.AddNewDialogue(playerName, "", true, false, false, false);//0
        convo1_1.AddNewDialogue(nurseLotte, "Oh, just go to the end of this room and then turn left. If you follow the hallway, it is the second room.", false, false, false, false);//1
        convo1_1.AddNewDialogue(nurseLotte, "Turn left at the end of the reception and follow the hallway all the way till the end.", false, false, false, false);//2
        convo1_1.AddNewDialogue(nurseLotte, "You can't miss it!", false, false, false, false);//3
        convo1_1.AddNewDialogue(nurseLotte, "Okay, see you later!", false, true, false, false);//4
        convo1_1.AddNewDialogue(playerName, "Do you need something?", true, false, false, false);//5
        //Need to set the start sentence
        convo1_1.StartSetUp();
        //Set Emotions
        convo1_1.SetDialogueEmotion(0, emotion.WORRIED);
        convo1_1.SetDialogueEmotion(3, emotion.HAPPY);
        convo1_1.SetDialogueEmotion(4, emotion.HAPPY);
        //Adding options
        //This option needs to be hidden after it's asked
        convo1_1.AddOption(0, "Where is room C4.035 again?");//0
        convo1_1.AddOption(0, "Staff room? How can I find that?");//1
        convo1_1.AddOption(0, "Sure, I will take care of it!");//2
        convo1_1.AddOption(0, "Can I ask you again...");//3
        convo1_1.AddOption(5, "Where is room C4.035 again?");//0
        convo1_1.AddOption(5, "Staff room? How can I find that?");//1
        convo1_1.AddOption(5, "Never mind, I remember now");//2
        //End conversation option
        convo1_1.SetOptionForConvoOver(0,2, true);
        convo1_1.SetOptionForConvoOver(5, 2, true);
        //Adding option nextId
        convo1_1.SetNextIdInOption(0, 0, 1);
        convo1_1.SetNextIdInOption(0, 1, 2);
        convo1_1.SetNextIdInOption(0, 2, 4);
        convo1_1.SetNextIdInOption(0, 3, 5);
        convo1_1.SetNextIdInOption(5, 0, 1);
        convo1_1.SetNextIdInOption(5, 1, 2);
        convo1_1.SetNextIdInOption(5, 2, 4);
        //Adding dialogue nextId
        convo1_1.SetDialogueNextId(1, 0);
        convo1_1.SetDialogueNextId(3, 0);
        convo1_1.SetDialogueNextId(4, 0);
        //Set Hidden options
        convo1_1.SetOptionToHidden(5, 0, true);
        convo1_1.SetOptionToHidden(5, 1, true);

        //Adding dialogue (name,sentence, option, end, used, hidden)
        convo1_2.AddNewDialogue(playerName, "Excuse me Lotte, could I ask you a question?", false, false, false, false);//0
        convo1_2.AddNewDialogue(nurseLotte, "Yes of course. What is the problem?", false, false, false, false);//1
        convo1_2.AddNewDialogue(playerName, "Yes of course. What is the problem?", true, false, false, false);//2
        convo1_2.AddNewDialogue(nurseLotte, "Okay, see you later!", false, true, false, false);//3 end
        convo1_2.AddNewDialogue(playerName, "The patient who pressed the emergency button is feeling unwell because his room neighbour has a lot of visitors and it is very loud in the room.", false, false, false, false);//4
        //Check if player tried talking to visitor 
        convo1_2.AddNewDialogue(nurseLotte, "Oh, I see. Did you try to talk to the visitor? If you explain the situation, they will probably understand.", false, false, false, false);//5
        convo1_2.AddNewDialogue(playerName, "No, not yet. I will try that now, thank you!", false, false, false, false);//6
        convo1_2.AddNewDialogue(playerName, "He asked me to talk to group, but they don't seem to speak nor understand English.", false, false, false, false);//7
        convo1_2.AddNewDialogue(nurseLotte, "That really is a difficult situation. Do you know the name of the patient with the visitors?", false, false, false, false);//8
        //Did player check for the patient name?
        convo1_2.AddNewDialogue(playerName, "No, I don't think so. Where can I look up the patient's name?", false, false, false, false);//9
        convo1_2.AddNewDialogue(nurseLotte, "There is a sheet with all important information about the patients at the end of their bed.", false, false, false, false);//10
        convo1_2.AddNewDialogue(nurseLotte, "Maybe you should take a look? It's easier to plan your next steps if you have this information.", false, false, false, false);//11
        //This is yes to look for name
        convo1_2.AddNewDialogue(playerName, "Yes, if I remember correctly it should be...", false, false, false, false);//12
        convo1_2.AddNewDialogue(playerName, "", true, false, false, false);//13
        convo1_2.AddNewDialogue(nurseLotte, "Hmm, I don't remember a patient with that name. Are you sure?", false, false, false, false);//14
        convo1_2.AddNewDialogue(playerName, "Oh, now that I think about it...", false, false, false, false);//15
        convo1_2.AddNewDialogue(nurseLotte, "Oh, I remember her. She does not speak English unfortunately, but her husband does.", false, false, false, false);//16
        convo1_2.AddNewDialogue(nurseLotte, "He usually visits her everyday around this time, so he is probably here as well today.", false, false, false, false);//17
        convo1_2.AddNewDialogue(nurseLotte, "If you look up his name, maybe you can ask the other visitors where he is? Otherwise you could also give him a call. He is registered as her contact person.", false, false, false, false);//18
        convo1_2.AddNewDialogue(playerName, "", true, false, false, false);//19
        convo1_2.AddNewDialogue(nurseLotte, "You can check the patient registration system. The details of the contact persons are written down there.", false, false, false, false);//20
        convo1_2.AddNewDialogue(nurseLotte, "Haha, I speak just as much Turkish as you do. I think you can solve this yourself!", false, false, false, false);//21
        convo1_2.AddNewDialogue(nurseLotte, "Good luck!", false, true, false, false);//22 end
        //This is if player talked to visitors/ didn't look for name
        convo1_2.AddNewDialogue(playerName, "", true, false, false, false);//23
        convo1_2.AddNewDialogue(nurseLotte, "Alright then.", false, true, false, false);//24 end
