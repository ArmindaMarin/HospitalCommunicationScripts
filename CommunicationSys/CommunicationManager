        convo7.SetDialogueNextId(18, 16);
        convo7.SetDialogueNextId(23, 17);
        convo7.SetDialogueNextId(24, 22);
        convo7.SetDialogueNextId(26, 17);
        convo7.SetDialogueNextId(27, 17);
        //Set Hidden options
        convo7.SetOptionToHidden(17, 3, true);

        // This communication is used when there are no more conversations left
        //Adding dialogue to convoDefault
        convoDefault.AddNewDialogue(playerName, "I should go do something else", false, true, false, false);
        //Need to set the start sentence convoDefault
        convoDefault.StartSetUp();

        //A list of communication for this chapter
        List<Conversation> chapterDataList = new List<Conversation>();

        //Adding communications to the chaper
        chapterDataList.Add(convo1);//0
        chapterDataList.Add(convo1_1);//1
        chapterDataList.Add(convo1_2);//2
        chapterDataList.Add(convo1_3);//3
        chapterDataList.Add(convo2);//4
        chapterDataList.Add(convo2_1);//5
        chapterDataList.Add(convo3);//6
        chapterDataList.Add(convo3_1);//7
        chapterDataList.Add(convo4);//8
        chapterDataList.Add(convo5);//9
        chapterDataList.Add(convo6);//10
        chapterDataList.Add(convo7);//11
        chapterDataList.Add(convoDefault);//12

        ////Create a ChapterConversation
        Chapter chapter = new Chapter(chapterDataList,1);

        return chapter;
    }

